NAME	=	libft.a

CfLAGS	=	-Wall -Wextra -Werror

CC		=	gcc ${CFLAGS}

SRCS	=	ft_bzero.c		ft_isalpha.c	ft_isprint.c	ft_memcpy.c /
			ft_strchr.c		ft_strlcpy.c	ft_strnstr.c	ft_tolower.c /
			ft_calloc.c		ft_isascii.c	ft_memchr.c		ft_memmove.c /
			ft_strdup.c		ft_strlen.c		ft_toupper.c	ft_isalnum.c /
			ft_isdigit.c	ft_memcmp.c		ft_memset.c		ft_strlcat.c /
			ft_strncmp.c	ft_strrchr.c

OBJS	=	${SRCS:.c=.o}


RM		=	rm -f

$(NAME):	${OBJS}
			ar rcs $@ $^

%.o:		%.c
			${CC} -o $@ -c $<

all:		${NAME}

clean:
			${RM} ${OBJS}

fclean:		clean
			${RM} ${NAME}

re:			fclean all

.PHONY:		clean fclean all
